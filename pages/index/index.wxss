/**index.wxss**/
.myapp {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header-content{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  padding: 0;
  margin: 0;
  background-color: #78a5f1;
}
.city{
  color: #ffffff;
  display: flex;
  justify-content: center;
}
.city-img{
  padding-top: 3px;
  width: 15px;
  height: 15px;
}
.temperature{
  font-size:62px;
  color:#ffffff;
}
.weather{
  font-size: 22px;
  color: #fff;
}
.dressing-advice{
  height: 30px;
  padding-top:10px;
  padding-bottom: 50px;
  text-align: center;
  font-size: 12px;
  color: #fff;
}
.dressing-advice-item{
  transition:  all 1s;
}
.middle-content{
  display: flex;
  width: 100%;
  position: relative;
  border-bottom: 1px solid #e4e4e4;
}
.middle-content::after{
    content: "";
    position: absolute;
    width: 1px;
    height: 52px;
    background-color: #f0f0f0;
    left: 50%;
    top: 26px;
}
.middle-content-item{
  width: 50%;
  color: #434343;
  font: 14px Simsun,Helvetica,Arial,sans-serif;
  padding: 20px;
}
.item-top{
  display: flex;
  justify-content: space-between;
  margin-bottom: 13px;
}
.item-bottom{
   display: flex;
   justify-content: space-between;
}
.item-bottom-weater{
  display: flex;
  align-items: center;
}
.weather-img{
  height: 30px;
  width: 30px;
}
.future{
  background-color: #f4f4f4;
  width: 100%;
}
.future-weather{
  margin-top:15px;
  background-color: #ffffff;
  display: flex;
  overflow-x: scroll;
  width: 100%;
}
.future-weather-cell{
  text-align: center;
  flex: 1;
  width: 100%;
  font-size: 10px;
}
.future-date{
  color: #384c78;
}
.future-weather-img{
  width: 15px;
  height: 15px;
  text-align: center;
  margin: 0 auto;
}